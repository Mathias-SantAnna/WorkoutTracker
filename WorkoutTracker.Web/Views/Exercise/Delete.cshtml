@model WorkoutTracker.Web.Models.Exercise

@{
    ViewData["Title"] = "Delete Exercise";
}

<h1>Delete Exercise</h1>

<h3>Are you sure you want to delete this exercise?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Target Muscle</dt>
        <dd class="col-sm-9">@Model.TargetMuscle</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ExerciseId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>