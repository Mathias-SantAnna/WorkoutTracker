@model IEnumerable<WorkoutTracker.Web.Models.Workout>

@{
    ViewData["Title"] = "Workouts";
}

<h1>Workouts</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DurationMinutes)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationMinutes) min
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkoutId" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.WorkoutId" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.WorkoutId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>