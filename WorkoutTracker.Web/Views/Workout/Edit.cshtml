@model WorkoutTracker.Web.Models.Workout

@{
    ViewData["Title"] = "Edit Workout";
    var exercises = ViewBag.Exercises as List<WorkoutTracker.Web.Models.Exercise> ?? new List<WorkoutTracker.Web.Models.Exercise>();
    var workoutExercises = ViewBag.WorkoutExercises as List<WorkoutTracker.Web.Models.WorkoutExercise> ?? new List<WorkoutTracker.Web.Models.WorkoutExercise>();
}

<h1>Edit Workout</h1>

<div class="card">
    <div class="card-header bg-primary text-white">
        Edit Workout
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Workout" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkoutId" />

            <div class="form-group mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WorkoutDate">Workout Date</label>
                <input asp-for="WorkoutDate" class="form-control" type="date" />
                <span asp-validation-for="WorkoutDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DurationMinutes">Duration (minutes)</label>
                <input asp-for="DurationMinutes" class="form-control" type="number" min="1" />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>

            <!-- Current Exercises Section -->
            @if (workoutExercises != null && workoutExercises.Count > 0)
            {
                <h4 class="mt-4">Current Exercises</h4>

                @for (int i = 0; i < workoutExercises.Count; i++)
                {
                    var exercise = workoutExercises[i];
                    <div class="mb-4 p-3 border rounded">
                        <input type="hidden" name="ExistingExerciseIds[@i]" value="@exercise.WorkoutExerciseId" />

                        <div class="form-group mb-3">
                            <label>Exercise</label>
                            @if (exercises != null && exercises.Any())
                            {
                                <select name="ExistingExerciseTypeIds[@i]" class="form-control">
                                    @foreach (var ex in exercises)
                                    {
                                        if (ex.ExerciseId == exercise.ExerciseId)
                                        {
                                            <option value="@ex.ExerciseId" selected>@ex.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@ex.ExerciseId">@ex.Name</option>
                                        }
                                    }
                                </select>
                            }
                            else
                            {
                                <input type="text" value="@exercise.Exercise?.Name" class="form-control" readonly />
                                <input type="hidden" name="ExistingExerciseTypeIds[@i]" value="@exercise.ExerciseId" />
                            }
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label>Sets</label>
                                    <input type="number" name="ExistingSets[@i]" value="@exercise.Sets" min="1" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label>Reps</label>
                                    <input type="number" name="ExistingReps[@i]" value="@exercise.Reps" min="1" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label>Weight (lbs)</label>
                                    <input type="number" name="ExistingWeights[@i]" value="@exercise.WeightLbs" step="0.5" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <button type="button" class="btn btn-danger delete-exercise-btn" data-exercise-id="@exercise.WorkoutExerciseId">
                            Delete Exercise
                        </button>
                    </div>
                }
            }

            <!-- Add Exercises Section -->
            <h4 class="mt-4">Add Exercises</h4>

            <div id="new-exercises-container">
                <div class="mb-4 p-3 border rounded">
                    <div class="form-group mb-3">
                        <label>Exercise</label>
                        <select name="NewExerciseIds[0]" class="form-control">
                            <option value="">-- Select Exercise --</option>
                            @foreach (var ex in exercises)
                            {
                                <option value="@ex.ExerciseId">@ex.Name</option>
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label>Sets</label>
                                <input type="number" name="NewSets[0]" min="1" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label>Reps</label>
                                <input type="number" name="NewReps[0]" min="1" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label>Weight (lbs)</label>
                                <input type="number" name="NewWeights[0]" step="0.5" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <button type="button" id="add-exercise-btn" class="btn btn-success">Add Another Exercise</button>
            </div>

            <div id="deleted-exercises-container"></div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            let newExerciseCount = 1;

            // Add exercise button
            $("#add-exercise-btn").click(function() {
                const index = newExerciseCount;

                const newExerciseHtml = `
                <div class="mb-4 p-3 border rounded">
                    <div class="form-group mb-3">
                        <label>Exercise</label>
                        <select name="NewExerciseIds[${index}]" class="form-control">
                            <option value="">-- Select Exercise --</option>
                            @foreach (var ex in exercises)
                {
                    <option value="@ex.ExerciseId">@ex.Name</option>
                }
                        </select>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label>Sets</label>
                                <input type="number" name="NewSets[${index}]" min="1" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label>Reps</label>
                                <input type="number" name="NewReps[${index}]" min="1" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label>Weight (lbs)</label>
                                <input type="number" name="NewWeights[${index}]" step="0.5" class="form-control" />
                            </div>
                        </div>
                    </div>
                    
                    <button type="button" class="btn btn-danger remove-exercise-btn">
                        Remove
                    </button>
                </div>`;

                $("#new-exercises-container").append(newExerciseHtml);
                newExerciseCount++;
            });

            // Remove exercise button
            $(document).on("click", ".remove-exercise-btn", function() {
                $(this).closest(".mb-4").remove();
            });

            // Delete existing exercise button
            $(document).on("click", ".delete-exercise-btn", function() {
                const exerciseId = $(this).data("exercise-id");

                if (confirm("Are you sure you want to delete this exercise?")) {
                    $("#deleted-exercises-container").append(`<input type="hidden" name="DeletedExerciseIds" value="${exerciseId}" />`);
                    $(this).closest(".mb-4").hide();
                }
            });
        });
    </script>
}