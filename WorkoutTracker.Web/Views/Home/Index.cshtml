@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold text-primary">Track Your Fitness Journey</h1>
            <p class="lead">Record workouts, track exercises, and monitor your progress with our easy-to-use workout tracking app.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
                <a asp-controller="Workout" asp-action="Create" class="btn btn-primary btn-lg px-4 me-md-2">
                    <i class="bi bi-plus-circle"></i> New Workout
                </a>
                <a asp-controller="Workout" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-list"></i> View Workouts
                </a>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/images/FitnessStats.png" alt="Fitness" class="img-fluid" style="max-height: 200px;" />
        </div>
    </div>

    <div class="row mt-4 g-4">
        <div class="col-md-4">
            <div class="card h-100 workout-card bg-light">
                <div class="card-body text-center">
                    <i class="bi bi-activity exercise-icon mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Track Workouts</h5>
                    <p class="card-text">Record your workout sessions including duration, exercises performed, and more.</p>
                    <a asp-controller="Workout" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Manage Workouts
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 workout-card bg-light">
                <div class="card-body text-center">
                    <i class="bi bi-bicycle exercise-icon mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Exercise Library</h5>
                    <p class="card-text">Browse and manage your exercise catalog with descriptions and target muscles.</p>
                    <a asp-controller="Exercise" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> View Exercises
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 workout-card bg-light">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up exercise-icon mb-3" style="font-size: 3rem;"></i>
                    <h5 class="card-title">Track Progress</h5>
                    <p class="card-text">Monitor your fitness journey with detailed progress tracking and statistics.</p>
                    <a href="#" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> View Statistics
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-5 py-5 bg-light rounded-3">
        <div class="col-md-6 d-flex align-items-center">
            <div class="p-4">
                <h2 class="text-primary">Track Your Fitness Goals</h2>
                <p>Whether you're just starting your fitness journey or you're a seasoned athlete, our app helps you monitor your progress and achieve your goals.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Record workout details and exercises</li>
                    <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Track weights, sets, and reps</li>
                    <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Monitor your progress over time</li>
                    <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Identify trends and improvements</li>
                </ul>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/images/ActivityTracker.png" alt="Progress Tracking" class="img-fluid rounded" style="max-height: 200px;" />
        </div>
    </div>
</div>